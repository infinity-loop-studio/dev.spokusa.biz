<!-- OFFCANVAS -->
<div id="create-category" uk-offcanvas="overlay: true; flip: true; bg-close: false">
    <div class="uk-offcanvas-bar uk-padding-small">

        <button class="uk-offcanvas-close" type="button" uk-close></button>

        <h3>Создать новую категорию</h3>

        <ul class="uk-subnav uk-subnav-pill" uk-switcher>
            <li><a href="#">Русский</a></li>
            <li><a href="#">Украински</a></li>
        </ul>

        <ul class="uk-switcher uk-margin">
            <li>
                <form id="newcategory">
                    <fieldset class="uk-fieldset">

                        <div class="uk-margin">
                            <input class="uk-input" type="text" placeholder="Название категории" required>
                        </div>

                        <div class="uk-margin">
                            <textarea class="uk-textarea" rows="5" placeholder="Описание" required></textarea>
                        </div>

                        <div class="uk-margin">
                            <textarea class="uk-textarea" rows="5" placeholder="Короткое описание" required></textarea>
                        </div>

                        <div class="uk-margin">
                            <select class="uk-select">
                                <option disabled selected>Родительская категория</option>
                            </select>
                        </div>

                    </fieldset>
                    <p uk-margin>
                        <button class="uk-button uk-button-primary" data-action="newcategory.save">Сохранить</button>
                        <button class="uk-button uk-button-secondary" data-action="newcategory.save.create">Сохранить и создать</button>
                        <button class="uk-button uk-button-secondary" data-action="newcategory.save.hide">Сохранить и закрыть</button>
                        <button class="uk-button uk-button-danger" onclick="UIkit.offcanvas('#create-category').hide()">Отмена</button>
                    </p>
                </form>
            </li>
            <li></li>
        </ul>

    </div>
</div>
<!-- OFFCANVAS -->
